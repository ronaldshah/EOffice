
@model DataModel.DMInsertNewClient
@{
    ViewBag.Title = "New Client";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="form-horizontal">
            <div class="form-group">
                <img src="~/Assets/Images/employee.png" width="50px" height="50px" class="control-label col-sm-2" />
                <div class="col-sm-5">
                    <h2>New Client</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="dvLoader" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: rgb(102, 102, 102); z-index: 30001; opacity: 0.8;display:none;">
    <p style="position: absolute; color: White; top: 45%; left: 45%;">
        <img src="~/Assets/Images/loading_gear.gif" width="100px" height="100px" /><br />
        <span class="center-block" style="background-color:black">Please Wait...</span>

    </p>
</div>


    
        
    <div class="row">
        @using (Html.BeginForm("AddClient", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="col-12 mt-4">
            <div class="text-white text-center d-block mb-1"><h4 class="titulo pb-2 pt-2">New Client Registration</h4></div>
            <div class="mb-2 pl-2 text-white d-block titulo">Company Details</div>
            <table class="table table-sm">
                <tbody>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;border-top:5px #41719C solid">Company Name <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="background-color:#D6E6F4;border-top:5px #41719C solid;border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.CompanyName, new { @class = "w-100 no-print-required", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid;" class="text-center">NPWP <span class="text-danger">*</span></td>
                        <td colspan="3" >
                            @Html.TextBoxFor(x => Model.DC.NPWP, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td  class="text-right">Image<span class="text-danger">*</span></td>
                        <td style="border-right:1px #41719C solid;">
                            <input type="file" name="npwpimg" id="npwpimg" class="w-100 no-print-required element-white" , required = "required">
                        </td>
                        
                    </tr>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;">Address <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="background-color:#D6E6F4;border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.Street, new { @class = "w-100 no-print-required", @required = "required" })
                        </td>
                        
                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid;" class="text-center">City <span class="text-danger">*</span></td>
                        <td >
                            @Html.TextBoxFor(x => Model.DC.City, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td class="text-right">Province/State<span class="text-danger">*</span></td>
                        <td>
                            @Html.TextBoxFor(x => Model.DC.Province, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td class="text-right">ZIP<span class="text-danger">*</span></td>
                        <td style="border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.ZIP, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid; border-bottom:5px #41719C solid" class="text-center">Phone <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="border-right:1px #41719C solid;border-bottom:5px #41719C solid; background-color:#D6E6F4;">
                            @Html.TextBoxFor(x => Model.DC.Phone, new { @class = "w-100 no-print-required", @required = "required" })
                            
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-12 mt-4">
            
            <div class="mb-2 pl-2 text-white d-block titulo">Contact Details</div>
           
            <table class="table table-sm">
                
                <tbody>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;border-top:5px #41719C solid">Contact Name <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="background-color:#D6E6F4;border-top:5px #41719C solid;border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.ContactName, new { @class = "w-100 no-print-required", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid;" class="text-center">ID Type <span class="text-danger">*</span></td>
                        <td colspan="1">
                            @Html.DropDownListFor(x => Model.DC.IDType, new SelectList(Model.IDType, "ID", "TXT"), "Select One", new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td class="text-right">Number<span class="text-danger">*</span></td>
                        <td>
                            @Html.TextBoxFor(x => Model.DC.IDNumber, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td class="text-right">Image<span class="text-danger">*</span></td>
                        <td style="border-right:1px #41719C solid;">
                            <input type="file" name="idimage" id="idimage" class="w-100 no-print-required element-white" required = "required">
                        </td>

                    </tr>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;">Department <span class="text-danger">*</span></td>
                        <td colspan="3" style="background-color:#D6E6F4;">
                            @Html.TextBoxFor(x => Model.DC.Department, new { @class = "w-100 no-print-required", @required = "required" })
                        </td>
                        <td style="background-color:#D6E6F4;">Position <span class="text-danger">*</span></td>
                        <td  style="background-color:#D6E6F4;border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.Position, new { @class = "w-100 no-print-required", @required = "required" })
                        </td>

                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid; border-bottom:5px #41719C solid" class="text-center">Contact Number<span class="text-danger">*</span></td>
                        <td colspan="1" style="border-bottom:5px #41719C solid">
                            @Html.TextBoxFor(x => Model.DC.ContactNumber, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                        <td class="text-right" style="border-bottom:5px #41719C solid">E-Mail<span class="text-danger">*</span></td>
                        <td colspan="3"  style="border-bottom:5px #41719C solid;border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.Email, new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                    </tr>
                    
                </tbody>
                
                
            </table>
           
            
            
        </div>

        <div class="col-12 mt-4">

            <div class="mb-2 pl-2 text-white d-block titulo">Product</div>
            <table class="table table-sm">
                <tbody>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;border-top:5px #41719C solid">Product  <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="border-top:5px #41719C solid;border-right:1px #41719C solid;">
                            @Html.DropDownListFor(x => Model.DC.ProductName, new SelectList(Model.Products, "ID", "TXT"), "Select One", new { @class = "w-100 no-print-required element-white", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid;">Billing Cycle  <span class="text-danger">*</span></td>
                        <td colspan="5" class="w-75" style="border-right:1px #41719C solid;background-color:#D6E6F4;">
                            @Html.DropDownListFor(x => Model.DC.BillingCycle, new SelectList(Model.BillingCylce, "ID", "TXT"), "Select One", new { @class = "w-100 no-print-required", @required = "required" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px;border-right:1px #41719C solid;" class="text-center">Promo Code</td>
                        <td colspan="3">
                            @Html.TextBoxFor(x => Model.DC.Promo, new { @class = "w-100 no-print-required element-white" })
                        </td>
                        <td class="text-right" >Discount</td>
                        <td style="border-right:1px #41719C solid;">
                            @Html.TextBoxFor(x => Model.DC.Discount, new { @class = "w-100 no-print-required element-white" })
                        </td>
                        

                    </tr>
                    <tr>
                        <td class="w-25 text-center" style="border-right:1px #41719C solid; border-bottom:5px #41719C solid;">Setup Support </td>
                        <td colspan="7" style="background-color:#D6E6F4;border-right:1px #41719C solid; border-bottom:5px #41719C solid;">
                            @Html.CheckBoxFor(x => Model.DC.SetupFee, new { @class = "w-25 no-print-required" })
                        </td>
                        

                    </tr>
                    
                </tbody>
            </table>
        </div>
        <button id="singlebutton" name="singlebutton" class="btn btn-primary btn-sm pull-left">Save</button>
        }
    </div>
    
   


<link href="~/Assets/css/newclient.css" rel="stylesheet" />
<script src="~/Assets/JQuery/jquery-1.9.1.js"></script>
<script src="~/Assets/bootstrap/js/bootstrap.js"></script>
<script src="~/Assets/JS/newclient.js"></script>
<script src="~/Assets/bootstrap-notify-master/bootstrap-notify.js"></script>
<script src="~/Assets/JQuery/jquery.unobtrusive-ajax.js"></script>

<script type="text/javascript">

        function ShowPreview(input,id) {
                if (input.files && input.files[0]) {
                    var ImageDir = new FileReader();
                    ImageDir.onload = function(e) {
                    $('#impPrev'+id).attr('src', e.target.result);
                    }
                    ImageDir.readAsDataURL(input.files[0]);
                }
        }
        
</script>  