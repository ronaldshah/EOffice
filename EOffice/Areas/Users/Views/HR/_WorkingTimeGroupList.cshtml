@model IEnumerable<DataModel.DMNewWorkingHour>


@if (Model != null && Model.Count() > 0)
{
    foreach (DataModel.DMNewWorkingHour DMaster in Model)
    {

        <div class="col-lg-12">
            <div class="panel panel-primary">
                <br/>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Branch" style="text-align:left;margin-left:10px">Branch </label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(x => DMaster.BranchName, new { @class = "form-control", @value = DMaster.BranchName,  @required = "required",@disabled="disabled" })
                            
                        </div>
                        <div class="col-sm-6">
                            @if (DMaster.FActive == true)
                            {
                             <img src="~/Assets/Images/power-on-icon-hi.png" height="40px" width="40px" onclick="UpdateWorkingHour(@DMaster.ID)" />
                            }
                            else
                            {
                                <img src="~/Assets/Images/power-off-icon-hi.png" height="40px" width="40px" onclick="UpdateWorkingHour(@DMaster.ID)"/>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="GroupName" style="text-align:left;margin-left:10px">Group Name </label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(x => DMaster.TimeGroupName, new { @class = "form-control", @value = DMaster.TimeGroupName, @required = "required", @disabled = "disabled" })
                        </div>
                    </div>
                </div>

                <div class="table-responsive" style="margin-left:10px;">
                    <table class="table" >
                        <thead>
                            <tr>

                                <th></th>
                                <th>Current</th>
                                <th>Maximun</th>
                                <th>Minumun</th>
                                <td></td>


                            </tr>
                        </thead>

                        <tbody id="tBLItems">


                            <tr>
                                <td>Time In</td>
                                <td>@DMaster.CurrentIn</td>
                                <td>@DMaster.MaxIn</td>
                                <td>@DMaster.MinIn</td>
                            </tr>
                            <tr>
                                <td>Time Out</td>
                                <td>@DMaster.CurrentOut</td>
                                <td>@DMaster.MaxOut</td>
                                <td>@DMaster.MinOut</td>
                            </tr>

                        </tbody>

                    </table>
                </div>
                <br/>
             </div>
            </div>


            }


            }
            else {
            }

